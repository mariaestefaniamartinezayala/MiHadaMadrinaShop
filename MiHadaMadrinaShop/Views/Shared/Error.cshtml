@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container d-flex flex-column min-vh-100">
    <div class="row m-5">
        <div class="col-6 d-flex align-items-center">
            <div>
                <h1 class="text-danger">@ViewData["Title"]</h1>
                <h6 class="text-danger">No puede realizar est&aacute; operaci&oacute;n, consulte con los administradores de la p&aacute;gina.</h6>
            </div>
        </div>
        <div class="col-6 align-items-center">
            <img src="~/img/illustrations/undraw_cancel_re_pkdm.svg" alt="imagen de acceso denegado" class="imagen-width img-fluid" />
        </div>
    </div>
</div>



